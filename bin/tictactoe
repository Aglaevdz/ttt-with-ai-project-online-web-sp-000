def play_again
  puts "Do you want to play again? (Y/N)"
  again = gets.strip.upcase
  if again == "Y"
    game = Game.new
  else again == "N"
    puts "Thanks for playing!"
  end
end

def gameType
  game = Game.new
  until game.won?
    game.play
  end
end
